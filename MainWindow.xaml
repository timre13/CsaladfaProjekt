<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csaladfa"
        x:Class="Csaladfa.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="395*"/>
        </Grid.RowDefinitions>
        <Canvas
            Background="#FFA0A0A0"
            x:Name="canvas"
            MouseLeftButtonDown="canvas_MouseLeftButtonDown"
            MouseLeftButtonUp="canvas_MouseLeftButtonUp"
            MouseMove="canvas_MouseMove" Margin="300,0,300,0" Width="900"/>
        <ListView x:Name="PersonList" Margin="0,0,1200,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vezetéknév" Width="100" DisplayMemberBinding="{Binding surname}"/>
                    <GridViewColumn Header="Keresztnév" Width="100" DisplayMemberBinding="{Binding forename}"/>
                    <GridViewColumn Header="Nem" Width="40" DisplayMemberBinding="{Binding gender}"/>
                    <GridViewColumn Header="Szül. Év" Width="60" DisplayMemberBinding="{Binding birthYear}"/>
                    <GridViewColumn Header="Hal. Év" Width="60" DisplayMemberBinding="{Binding deathYear}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Margin="1205,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Label Content="Keresztnév:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="PersonSurnameEntry" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Grid.Row="0" Grid.Column="1"/>
            <Label Content="Vezetéknév:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="PersonForenameEntry" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Grid.Row="1" Grid.Column="1"/>
            <Label Content="Nem:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Grid.Column="0"/>
            <ComboBox x:Name="GenderCombobox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Height="25" SelectedIndex="0" Grid.Row="2" Grid.Column="1">
                <ComboBoxItem Content="Ismeretlen"></ComboBoxItem>
                <ComboBoxItem Content="Férfi"></ComboBoxItem>
                <ComboBoxItem Content="Nő"></ComboBoxItem>
                <ComboBoxItem Content="Egyéb"></ComboBoxItem>
            </ComboBox>
        </Grid>
    </Grid>
</Window>
